{% extends "base.twig" %}

{% block title %}Regisration{% endblock %}

{% block head %}
  {{ parent() }}
{% endblock %}

{% block content %}
  <h2>Welcome to the registration page</h2>

<div class="flex-center">
  <form method="post" action="/register">
    <div>
      <label for="lastname">Nom:</label><br>
      <input type="text" name="lastname" placeholder="RAMBO">
    </div>
    
    <div>
      <label for="firstname">Prénom:</label><br>
      <input type="text" name="firstname" placeholder="John">
    </div>

    <div>
      <label for="nickname">Pseudo:</label><br>
      <input type="text" name="nickname" placeholder="Vegeta44">
    </div>

    <div>
      <label for="mail">Email:</label><br>
      <input type="mail" name="mail" placeholder="jean.dupont@tld.fr">
    </div>

    <div>
      <label for="password">Mot de passe:</label><br>
      <input type="password" name="password">
    </div>

    <div>
      <label for="password_confirm">Confirmez votre mot de passe:</label><br>
      <input type="password" name="password_confirm">
    </div>

    <div>
      <label for="birthdate">Date de naissance:</label><br>
      <input type="date" name="birthdate">
    </div>

    <div>
      <label for="gender">Sexe:</label><br>
      <select name="gender">
        <option>Homme</option>
        <option>Femme</option>
        <option>Autre</option>
      </select>
    </div>

    <div>
      <label for="presentation">Présentation:</label><br>
      <textarea name="presentation"></textarea>
    </div>

    <div>
      <label for="picture">Photo:</label><br>
      <textarea name="picture"></textarea>
    </div>

    <div>
      <label for="btn_submit" class="btn_submit">S'inscrire</label><br>
      <input type="submit" name="btn_submit" class="none" id="btn_submit">
    </div> 

  </form>
</div>
  
{% endblock %}